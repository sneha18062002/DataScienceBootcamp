# 1. Total number of orders that were completed on 18th March 2023:
SELECT COUNT(Order_id) AS total_orders
FROM SALES
WHERE Date = '2023-03-18';

# 2. Total number of orders that were completed on 18th March 2023 with the first name ‘John’ and last name ‘Doe’:
SELECT COUNT(SALES.Order_id) AS total_orders
FROM SALES
INNER JOIN CUSTOMERS ON SALES.Customer_id = CUSTOMERS.customer_id
WHERE SALES.Date = '2023-03-18'
  AND CUSTOMERS.first_name = 'John'
  AND CUSTOMERS.last_name = 'Doe';

# 3. Total number of customers that purchased in January 2023 and the average amount spent per customer:
SELECT COUNT(DISTINCT Customer_id) AS total_customers,
       AVG(Revenue) AS average_spent_per_customer
FROM SALES
WHERE Date BETWEEN '2023-01-01' AND '2023-01-31';

# 4. Departments that generated less than $600 in 2022:
SELECT I.department, SUM(S.Revenue) AS total_revenue
FROM SALES S
INNER JOIN ITEMS I ON S.Item_id = I.Item_id
WHERE S.Date BETWEEN '2022-01-01' AND '2022-12-31'
GROUP BY I.department
HAVING SUM(S.Revenue) < 600;

# 5. Most and least revenue generated by an order:

SELECT MAX(Revenue) AS max_revenue, MIN(Revenue) AS min_revenue
FROM SALES;

# 6. Orders that were purchased in our most lucrative order:

SELECT Order_id, Item_id, Quantity, Revenue
FROM SALES
WHERE Revenue = (SELECT MAX(Revenue) FROM SALES); 
